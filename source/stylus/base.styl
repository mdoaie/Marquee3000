@font-face {
  font-family: 'RobotoBlackItalic';
  src: url('assets/fonts/Roboto-BlackItalic.ttf');
}

html {
  font-size: 40px;
  overflow-x: hidden;

  +below(800px) {
    font-size: 32px;
  }

  +below(600px) {
    font-size: 24px;
  }
}

body {
  -webkit-font-smoothing: antialiased;
  font-family: 'RobotoBlackItalic';
}

h1 {
  text-transform: uppercase;
}

em {
  font-family: Georgia;
  font-style: italic;
}

.marquee3k {
  opacity: 0;
  transition: opacity 0.5s;

  &.is-init { opacity: 1; }
}

.marquee3k__copy {
  box-sizing: border-box;
  padding-right: 0.25rem;
}

.red {
  background: red;
  color: white;
}

img {
  width: 100px;
  height: auto;
  backface-visibility: hidden;
  animation: spin 30s linear infinite;
}

.spin-dis:hover {
  animation: spin 30s linear infinite;
}

.domino {
  width: 60px;
  height: 120px;
  display: inline-block;
  border: 3px solid black;
  position: relative;

  &:nth-child(even) {
    border-color: green;

    &:before,
    &:after {
      background: green;
    }
  }

  &:before,
  &:after {
    content: '';
    width: 30px;
    height: 30px;
    border-radius: 50%;
    background: black;
    position: absolute;
    left: calc(50% - 15px);
  }

  &:before { top: 15px; }
  &:after { bottom: 15px; }

  &:hover {
    transform: scale(1.3);
  }
}

@keyframes spin {
  100% { transform: rotate(360deg); }
}